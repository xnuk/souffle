// vim: ft=sass

*
	margin: 0
	padding: 0
	box-sizing: border-box

html, body
	height: 100%

body
	font-family: 'Noto Sans CJK KR', 'Noto Sans', sans-serif

ul
	list-style: none

a
	text-decoration: none
	color: inherit

button
	border: none
	font-family: inherit
	color: inherit
	background: transparent
	cursor: pointer
